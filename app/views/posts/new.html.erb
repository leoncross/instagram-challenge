<%= form_with scope: :post, url: posts_path, local: true, html: { multipart: true } do |form| %>  <p>
  <div class="field">
    add an image....
    <%= form.file_field :image %>
    </div>
    <p>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
    </p>
    <%= form.hidden_field :created_by, :value => current_user.username %>
    <p>
    <%= form.submit %>
  </p>
<% end %>
